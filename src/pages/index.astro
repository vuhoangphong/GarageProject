---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Slider from "../components/Slider.astro";
import Services from "../components/Services.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout
  pageTitle="合同会社 大繁 - 京都の自動車修理・車検・塗装専門店"
  metaDescription="京都で自動車の車検、鈑金、塗装、メンテナンスをお探しなら合同会社 大繁へ。経験豊富な技術者がお客様の愛車を丁寧にサポートいたします。"
  metaKeywords="京都, 車検, 鈑金, 塗装, 自動車修理, メンテナンス, 合同会社大繁, オートリペア"
>
  <Header />
  <Slider />
  <Services />

  <main>
    <section class="contact" id="contact">
      <h2 class="lang" data-ja="お問い合わせ" data-vn="Liên hệ">お問い合わせ</h2>
      <div itemscope itemtype="https://schema.org/LocalBusiness">
        <div class="contact-info">
          <div class="contact-item">
            <h3 class="lang" data-ja="所在地" data-vn="Địa chỉ">所在地</h3>
            <p class="lang" data-ja="〒601-8145 京都府京都市南区上鳥羽西浦町" data-vn="〒601-8145 Kyoto, Minami Ward, Kamitoba Nishiuracho" itemprop="address" itemscope itemtype="https://schema.org/PostalAddress">
              <span itemprop="postalCode">〒601-8145</span> 
              <span itemprop="addressRegion">京都府</span><span itemprop="addressLocality">京都市南区</span><span itemprop="streetAddress">上鳥羽西浦町</span>
            </p>
          </div>
          
          <div class="contact-item">
            <h3 class="lang" data-ja="営業時間" data-vn="Giờ làm việc">営業時間</h3>
            <div class="working-hours">
              <p class="lang" data-ja="平日: 9:00 - 18:00" data-vn="Thứ 2-6: 9:00 - 18:00" itemprop="openingHours" content="Mo-Fr 09:00-18:00">平日: 9:00 - 18:00</p>
              <p class="lang" data-ja="土曜日: 9:00 - 16:00" data-vn="Thứ 7: 9:00 - 16:00" itemprop="openingHours" content="Sa 09:00-16:00">土曜日: 9:00 - 16:00</p>
              <p class="lang" data-ja="日曜日・祝日: 定休日" data-vn="Chủ nhật & Lễ: Nghỉ">日曜日・祝日: 定休日</p>
            </div>
          </div>
          
          <div class="contact-item">
            <h3 class="lang" data-ja="お電話" data-vn="Điện thoại">お電話</h3>
            <p class="lang" data-ja="電話: 012-345-6789" data-vn="SĐT: 012-345-6789" itemprop="telephone">電話: 012-345-6789</p>
          </div>
        </div>
        
        <div class="map">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3269.9910195016714!2d135.73937337631963!3d34.9568337694258!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x600105ed77e39069%3A0xaa1606b76966a47!2zTmjhuq50IELhuqNuLCDjgJI2MDEtODE0NSBLeW90bywgTWluYW1pIFdhcmQsIEthbWl0b2JhIE5pc2hpdXJhY2jFjSwg44Ko44Kv44K744Os44Oz44OI77yT77yX77yT!5e0!3m2!1svi!2s!4v1767410445065!5m2!1svi!2s" 
            width="100%" height="280" style="border:0;" loading="lazy"
            title="合同会社 大繁 所在地マップ"
            aria-label="Google Maps showing location of 合同会社 大繁">
          </iframe>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
