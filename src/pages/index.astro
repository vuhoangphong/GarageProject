<style>
  .contact {
    padding: 80px 20px;
    background: white;
  }

  .contact-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .contact-title {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    font-size: clamp(24px, 4vw, 32px);
    color: var(--dark-gray);
    margin-bottom: 15px;
  }

  .title-decoration {
    color: var(--primary-red);
    font-weight: 300;
  }

  .contact-subtitle {
    color: #666;
    font-size: 16px;
    font-weight: 300;
    max-width: 600px;
    margin: 0 auto;
  }

  .contact-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .contact-info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
    margin-bottom: 50px;
  }

  .contact-card {
    background: #fafafa;
    padding: 30px;
    border-radius: 12px;
    text-align: center;
    border: 1px solid #f0f0f0;
    transition: all 0.3s ease;
  }

  .contact-card:hover {
    background: white;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transform: translateY(-2px);
  }

  .card-icon {
    font-size: 32px;
    margin-bottom: 15px;
  }

  .card-title {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 20px;
    color: var(--dark-gray);
  }

  .card-content {
    color: #666;
    line-height: 1.8;
  }

  .hours-item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 8px;
    padding: 5px 0;
  }

  .hours-item.closed {
    color: #999;
  }

  .phone-number {
    font-size: 20px;
    font-weight: 600;
    color: var(--primary-red);
    margin-bottom: 8px;
  }

  .phone-note {
    font-size: 14px;
    color: #999;
  }

  .map-container {
    background: #fafafa;
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid #f0f0f0;
  }

  .map-header {
    padding: 20px;
    background: white;
    border-bottom: 1px solid #f0f0f0;
  }

  .map-header h3 {
    margin: 0;
    font-size: 18px;
    font-weight: 600;
    color: var(--dark-gray);
  }

  .map {
    overflow: hidden;
    position: relative;
    height: 350px;
    border-radius: 0 0 12px 12px;
  }

  .map iframe {
    width: 100%;
    height: 100%;
    border: none;
    display: block;
    transition: all 0.3s ease;
  }

  .map-container:hover .map iframe {
    transform: scale(1.02);
  }

  @media (max-width: 768px) {
    .map {
      height: 280px;
    }
    
    .contact-info-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }
    
    .contact-card {
      padding: 20px;
    }
  }
</style>

<script>
  // Apply saved language preference on page load
  document.addEventListener('DOMContentLoaded', () => {
    const savedLang = localStorage.getItem('language');
    const isVN = savedLang === 'vn';
    
    if (isVN) {
      // Apply Vietnamese text to all elements with language data
      document.querySelectorAll(".lang, .langHeaderSerive, .langService").forEach(el => {
        const vnText = el.getAttribute("data-vn");
        if (vnText) el.textContent = vnText;
      });
    }
  });
</script>
