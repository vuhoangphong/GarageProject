---
import "../styles/adminStyle.css";
---
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Page</title>
  </head>
  <body>
    <header>
      <div class="logo">Admin</div>
      <nav>
        <a href="/">Home</a>
      </nav>
    </header>
    <main>
      <h1>Update Data</h1>
      <form id="adminForm">
        <h2>Banner Images</h2>
        <input type="text" name="banner1" placeholder="Banner Image 1 URL" />
        <input type="text" name="banner2" placeholder="Banner Image 2 URL" />
        <input type="text" name="banner3" placeholder="Banner Image 3 URL" />

        <h2>Service 1</h2>
        <input type="text" name="service1_jp" placeholder="サービス名 (JP)" />
        <input type="text" name="service1_vn" placeholder="Tên dịch vụ (VN)" />
        <input type="text" name="service1_img" placeholder="Image URL" />

        <!-- Repeat for other services and contact info as needed -->

        <h2>Contact Information</h2>
        <input type="text" name="address" placeholder="Address" />
        <input type="text" name="ggmap" placeholder="Google Map Embed Link" />
        <input type="text" name="phone" placeholder="Phone Number" />

        <button type="submit">Save</button>
      </form>
      <div id="result"></div>
    </main>
    <script>
      const adminForm = document.getElementById("adminForm");
      const resultDiv = document.getElementById("result");
      if (adminForm && resultDiv) {
        adminForm.addEventListener("submit", function(e) {
          e.preventDefault();
          // For static sites, you can output JSON to copy-paste, or send to an API if available
          const form = e.target;
          if (form instanceof HTMLFormElement) {
            const data = Object.fromEntries(new FormData(form).entries());
            resultDiv.textContent = JSON.stringify(data, null, 2);
          }
        });
      }
    </script>
  </body>
</html>
