<header>
  <a href="/" class="logo-link">
    <div class="logo">
      <div class="company-name">
        <span class="kanji">合同会社</span>
        <span class="company-main">大繁</span>
      </div>
      <div class="company-subtitle">
        <span class="lang" data-ja="自動車総合サービス" data-vn="Dịch vụ ô tô tổng hợp">自動車総合サービス</span>
      </div>
    </div>
  </a>
  <button class="mobile-menu" id="mobileToggle">☰</button>
  <nav id="navigation">
    <a href="#home" class="nav-link service-hidden">
      <span class="nav-text langHeaderSerive" data-ja="ホーム" data-vn="Trang Chủ">ホーム</span>
    </a>
    <a href="#services" class="nav-link service-hidden">
      <span class="nav-text langHeaderSerive" data-ja="サービス" data-vn="Dịch Vụ">サービス</span>
    </a>
    <a href="#contact" class="nav-link service-hidden">
      <span class="nav-text langHeaderSerive" data-ja="お問い合わせ" data-vn="Liên Hệ">お問い合わせ</span>
    </a>
    <button id="toggleLang" class="lang-toggle">
      <img src="/icon_Lang_Japan.png" alt="JP" class="flag-icon" width="16" height="12"> 
      <span>JP</span>
    </button>
  </nav>
  <button id="toggleLangDesktop" class="lang-toggle">
    <img src="/icon_Lang_Japan.png" alt="JP" class="flag-icon" width="16" height="12"> 
    <span>JP</span>
  </button>
</header>

<style>
/* Japanese-style header */
header {
  background: linear-gradient(135deg, var(--primary-red), var(--secondary-red));
  border-bottom: 4px solid var(--accent-gold);
  box-shadow: 0 2px 8px rgba(0,0,0,0.15);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15px 20px;
  color: white;
}

/* Hide nav-links on service pages */
body.service-page .service-hidden {
  display: none !important;
}

.logo-link {
  text-decoration: none;
  color: inherit;
  transition: opacity 0.3s ease;
}

.logo-link:hover {
  opacity: 0.9;
}

.logo {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.company-name {
  display: flex;
  align-items: baseline;
  gap: 0.3em;
}

.kanji {
  font-size: 14px;
  font-weight: 300;
  opacity: 0.9;
}

.company-main {
  font-size: 24px;
  font-weight: 700;
  font-family: 'Noto Serif JP', serif;
}

.company-subtitle {
  font-size: 11px;
  opacity: 0.8;
  margin-top: -2px;
  font-weight: 300;
}

nav {
  display: flex;
  align-items: center;
  gap: 20px;
}

.nav-link {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 2px;
  text-decoration: none;
  color: white;
  padding: 8px 12px;
  border-radius: 8px;
  transition: all 0.3s ease;
}

.nav-kanji {
  font-size: 16px;
}

.nav-text {
  font-size: 12px;
  font-weight: 400;
}

.nav-link:hover {
  background: rgba(255,255,255,0.15);
  transform: translateY(-1px);
}

.lang-toggle {
  background: rgba(255,255,255,0.9);
  border: 1px solid rgba(255,255,255,0.3);
  border-radius: 20px;
  padding: 6px 12px;
  display: flex;
  align-items: center;
  gap: 4px;
  cursor: pointer;
  transition: all 0.3s ease;
  color: var(--dark-gray);
}

.lang-toggle:hover {
  background: white;
  transform: translateY(-1px);
}

.mobile-menu {
  display: none;
  background: none;
  border: none;
  color: white;
  font-size: 18px;
  cursor: pointer;
}

@media (max-width: 768px) {
  .mobile-menu {
    display: block;
  }
  
  nav {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: var(--primary-red);
    flex-direction: column;
    padding: 20px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    z-index: 1000;
  }
  
  nav.mobile-open {
    display: flex;
  }
  
  .nav-link {
    width: 100%;
    flex-direction: row;
    justify-content: flex-start;
    gap: 10px;
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 5px;
  }
  
  .nav-link:hover {
    background: rgba(255,255,255,0.2);
  }
  
  #toggleLangDesktop {
    display: none;
  }
}

@media (min-width: 769px) {
  #toggleLang {
    display: none;
  }
}
</style>

<script>
  const toggleBtn = document.getElementById("toggleLang");
  const toggleBtnDesktop = document.getElementById("toggleLangDesktop");
  const mobileToggle = document.getElementById("mobileToggle");
  const navigation = document.getElementById("navigation");
  
  // Get saved language preference or default to Japanese
  let isJP = localStorage.getItem('language') !== 'vn';

  // Language toggle function
  function switchLanguage() {
    document.querySelectorAll(".lang, .langHeaderSerive, .langService").forEach(el => {
      const newText = isJP ? el.getAttribute("data-vn") : el.getAttribute("data-ja");
      if (newText) el.textContent = newText;
    });
    
    isJP = !isJP;
    
    // Save language preference
    localStorage.setItem('language', isJP ? 'jp' : 'vn');
    
    // Update both mobile and desktop buttons
    updateLanguageButtons();
  }

  // Update language buttons
  function updateLanguageButtons() {
    const flagSrc = isJP ? "/icon_Lang_Japan.png" : "/icon_Lang_VietNam.png";
    const newText = isJP ? "JP" : "VN";
    
    [toggleBtn, toggleBtnDesktop].forEach(btn => {
      if (btn) {
        const flagIcon = btn.querySelector('.flag-icon');
        const textSpan = btn.querySelector('span');
        if (flagIcon instanceof HTMLImageElement) {
          flagIcon.src = flagSrc;
          flagIcon.alt = newText;
        }
        if (textSpan) textSpan.textContent = newText;
      }
    });
  }

  // Apply saved language on page load
  function applySavedLanguage() {
    if (!isJP) {
      // Switch to Vietnamese
      document.querySelectorAll(".lang, .langHeaderSerive, .langService").forEach(el => {
        const vnText = el.getAttribute("data-vn");
        if (vnText) el.textContent = vnText;
      });
    }
    updateLanguageButtons();
  }

  // Initialize language on page load
  document.addEventListener('DOMContentLoaded', applySavedLanguage);

  // Check if current page is a service page and add class to body
  if (window.location.pathname.includes('/services/')) {
    document.body.classList.add('service-page');
  }

  // Attach language toggle to both buttons
  if (toggleBtn) {
    toggleBtn.addEventListener("click", switchLanguage);
  }
  
  if (toggleBtnDesktop) {
    toggleBtnDesktop.addEventListener("click", switchLanguage);
  }

  // Mobile menu toggle
  if (mobileToggle && navigation) {
    mobileToggle.addEventListener("click", () => {
      navigation.classList.toggle("mobile-open");
      mobileToggle.textContent = navigation.classList.contains("mobile-open") ? "✕" : "☰";
    });

    // Close mobile menu when clicking nav links
    navigation.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        navigation.classList.remove('mobile-open');
        mobileToggle.textContent = "☰";
      });
    });
  }

  // Close mobile menu when clicking outside
  document.addEventListener('click', (e) => {
    const target = e.target as Node;
    if (navigation && mobileToggle && target &&
        !navigation.contains(target) && 
        !mobileToggle.contains(target)) {
      navigation.classList.remove('mobile-open');
      mobileToggle.textContent = "☰";
    }
  });
</script>
